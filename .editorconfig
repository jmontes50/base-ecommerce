# EditorConfig ayuda a mantener estilos de codificación consistentes entre editores e IDEs

# Se aplica a todos los archivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Archivos Markdown: mantener los espacios al final
[*.md]
trim_trailing_whitespace = false

# Makefiles usan tabs
[Makefile]
indent_style = tab

# JSON y YAML: importante mantener 2 espacios para indentación
[*.{json,yml,yaml}]
indent_style = space
indent_size = 2
